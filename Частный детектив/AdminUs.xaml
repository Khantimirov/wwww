<Window x:Class="Частный_детектив.AdminUs"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Частный_детектив"
        mc:Ignorable="d"
        Title="Услуги" Height="350" Width="400" Icon="log.png"  Closed="Window_Closed" Loaded="Window_Loaded" MinWidth="400" MinHeight="350">

    <DockPanel LastChildFill="False">
        <Image DockPanel.Dock="Top" Source="/logo.png" Height="58"/>
        <TextBlock Text="Название" DockPanel.Dock="Top"/>
        <TextBox x:Name="textBoxName" DockPanel.Dock="Top"/>
        <TextBlock Text="Цена" DockPanel.Dock="Top"/>
        <TextBox x:Name="textBoxPrice" DockPanel.Dock="Top" />
        <TextBlock Text="Отдел" DockPanel.Dock="Top"/>
        <ComboBox x:Name="textBoxOtdel" DockPanel.Dock="Top" Margin="20 0" >
            <ComboBoxItem Content="сайт"/>
            <ComboBoxItem Content="маркетинг" />
            <ComboBoxItem Content="реклама" />
            <ComboBoxItem Content="приложение" />
        </ComboBox>
        <Button Content="OK" DockPanel.Dock="Top" Click="Button_Click"/>
    </DockPanel>
</Window>
